<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AWArtis.SettingsGeneralPage"
             Title="Ajustes" Disappearing="GrabaSettings">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Margin="5,5,0,0">
                <Label Text="Datos generales" FontSize="Large"   TextColor="Blue" />
                <Label Text="Ubicación base de datos" FontSize="Medium" />
                <Entry x:Name="txtCaminoAFichero" 
                   Text="Ubicación base de datos" 
                   Placeholder="Indique ubicación"
                   FontSize="Small"/>
                <Label Text="Nombre base datos" FontSize="Medium"/>
                <Entry x:Name="txtFichero" 
                   Text="Nombre base datos" 
                   Placeholder="Nombre"
                   FontSize="Small"/>
              </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>